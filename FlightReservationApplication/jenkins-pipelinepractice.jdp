pipeline {
  agent any

  environment {
    BACKEND_PORT = "9090"
  }

  stages {

    stage('Checkout Code') {
      steps {
        git branch: 'main', url: 'https://github.com/Jitendra1137/Flight-reservation.git'
      }
    }

    stage('Build Frontend') {
      steps {
        dir('frontend') {
          sh '''
            echo "âš™ï¸ Building React frontend..."
            echo "VITE_API_URL=http://13.235.115.135:${BACKEND_PORT}" > .env
            npm install
            npm run build
          '''
        }
      }
    }

    stage('Deploy Frontend') {
      steps {
        sh '''
          echo "ğŸš€ Deploying frontend to Nginx..."
          rm -rf /var/www/html/*
          cp -r frontend/dist/* /var/www/html/
          systemctl restart nginx || true
          echo "âœ… Frontend deployed successfully!"
        '''
      }
    }

  }

  post {
    success {
      echo "âœ… Frontend ready at: http://<jenkins-public-ip>"
    }
    failure {
      echo "âŒ Deployment failed! Check Jenkins logs."
    }
  }
}
