pipeline {
  agent any

  environment {
    DB_HOST = "database.cp2oyu6myvq8.ap-south-1.rds.amazonaws.com"
    DB_NAME = "flightdb"
    DB_USER = "admin"
    DB_PASS = "admin1234"

    BACKEND_PORT = "9090"  // âœ… changed port
  }

  stages {

    stage('Checkout Code') {
      steps {
        git branch: 'main', url: 'https://github.com/Jitendra1137/Flight-reservation.git'
      }
    }

    stage('Build Backend') {
      steps {
        dir('FlightReservationApplication') {
          sh '''
            echo "âš™ï¸ Building Spring Boot backend..."
            mvn clean package -DskipTests
          '''
        }
      }
    }

    stage('Run Backend') {
      steps {
        sh '''
          echo "ğŸš€ Starting backend on port ${BACKEND_PORT}..."
          pkill -f 'java -jar' || true
          nohup java -jar FlightReservationApplication/target/*.jar --server.port=${BACKEND_PORT} > backend.log 2>&1 &
          sleep 5
          echo "âœ… Backend started successfully on port ${BACKEND_PORT}"
        '''
      }
    }

    stage('Build Frontend') {
      steps {
        dir('frontend') {
          sh '''
            echo "âš™ï¸ Building React frontend..."
            echo "VITE_API_URL=http://localhost:${BACKEND_PORT}" > .env
            npm install
            npm run build
          '''
        }
      }
    }

    stage('Deploy Frontend') {
      steps {
        sh '''
          echo "ğŸš€ Deploying frontend to Nginx..."
          rm -rf /var/www/html/*
          cp -r frontend/dist/* /var/www/html/
          echo "âœ… Frontend deployed successfully!"
        '''
      }
    }

    stage('Health Check') {
      steps {
        sh '''
          echo "ğŸ” Checking endpoints..."
          echo "Backend:"; curl -I http://localhost:${BACKEND_PORT} || true
          echo "Frontend:"; curl -I http://localhost || true
        '''
      }
    }
  }

  post {
    success {
      echo "âœ… Deployment Completed Successfully!"
      echo "ğŸŒ Backend:  http://<jenkins-public-ip>:${BACKEND_PORT}"
      echo "ğŸ’» Frontend: http://<jenkins-public-ip>"
    }
    failure {
      echo "âŒ Deployment Failed! Check Jenkins console logs."
    }
  }
}
